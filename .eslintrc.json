{
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "extends": "eslint:recommended",
  "env": {
    "browser": false,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "rules": {
    "max-len": "off",
    "semi": "error"
  }
}
